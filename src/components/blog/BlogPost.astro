---
interface Props {
  title: string;
  url: string;
  image: string;
}

const { title } = Astro.props;
const { url } = Astro.props;
const { image } = Astro.props;
---

<a class="item-list" href={url}>
  <img src={image} alt={title} />
  <span class="small-text">{title}</span>
</a>

<style>
  article {
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
  }

  .grid-posts .item-list {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 300px;
  }

  .grid-posts .item-list img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .grid-posts .item-list span {
    padding: 16px;
  }
</style>
