---
const { title } = Astro.props;
const { url } = Astro.props;
const { img } = Astro.props;
const { description } = Astro.props;
---

<a href={url}>
  <img src={img} alt={title} />
  <p>{description}</p>
</a>

<style>
  a {
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
